.chat-side
  .side-header
    .side-header__box
      .user-name
        = current_user.name
      %ul.menu
        = link_to new_group_path(current_user), class: "new-group" do
          %i.fa.fa-edit
        = link_to edit_user_path(current_user), class: "edit-user" do
          %i.fa.fa-cog
  .side-bar__groups-list
    - current_user.groups.each do |group|
      .groups
        = link_to group_messages_path(group) do
          .groups__name
            = group.name
          .groups__message
            = group.show_last_message